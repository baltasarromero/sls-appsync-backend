          "Fn::GetAtt": [
            "GraphQlApi",
            "ApiId"
          ]
        },
        "TypeName": "Query",
        "FieldName": "helloWorld",
        "RequestMappingTemplate": "\r\n{\r\n    \"version\": \"2017-02-28\",\r\n    \"operation\": \"Invoke\",\r\n    \"payload\": {\r\n        \"field\": \"helloWorld\",\r\n        \"arguments\":  $utils.toJson($context.arguments),\r\n        \"handle\" : $utils.toJson($context.identity.username)\r\n    }\r\n}",
        "ResponseMappingTemplate": "$util.toJson($context.result)",
        "Kind": "UNIT",
        "DataSourceName": {
          "Fn::GetAtt": [
            "GraphQlDsawsLambdaDataSource",
            "Name"
          ]
        }
      }
